<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_background"
    android:orientation="vertical"
    tools:context=".register.Register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:textColor="@color/textColor"
            android:id="@+id/textView3"
            style="@style/title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="10dp"
            android:text="Sign Up"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>


        <ScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/register_textInput_to_textInput_size"
                    android:gravity="center_vertical">

                    <TextView
                        android:textColor="@color/textColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아이디"
                        android:textSize="@dimen/register_sideText_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/register_layout_height_size"
                    android:weightSum="11">

                    <EditText
                        android:textColor="@color/textColor_special"
                        android:textColorHint="@color/textColor"
                        android:id="@+id/id"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/register_and_textInput_height"
                        android:layout_weight="7"
                        android:background="@drawable/round_edittext"
                        android:hint="영문, 숫자 20자리 이하"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/register_EditText_paddingLeft"
                        android:textSize="@dimen/register_hint_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        style="@style/bold_theme"
                        android:id="@+id/check_id_btn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/register_button_height_size"
                        android:layout_weight="3"
                        android:background="@drawable/all_btn"
                        android:text="중복확인"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/register_button_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/register_textInput_to_textInput_size"
                    android:layout_weight="100"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="비밀번호"
                        android:textSize="@dimen/register_sideText_size"
                        android:textColor="@color/textColor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/register_layout_height_size">

                    <EditText
                        android:textColor="@color/textColor_special"
                        android:textColorHint="@color/textColor"
                        android:id="@+id/pw"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/register_and_textInput_height"
                        android:background="@drawable/round_edittext"
                        android:hint="영문 + 숫자 + 특수문자 각 하나 포함, 8~20 글자"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/register_EditText_paddingLeft"
                        android:textSize="@dimen/register_hint_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/register_textInput_to_textInput_size"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="비밀번호 확인"
                        android:textSize="@dimen/register_sideText_size"
                        android:textColor="@color/textColor"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/register_layout_height_size">

                    <EditText
                        android:textColor="@color/textColor_special"
                        android:id="@+id/pwc"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/register_and_textInput_height"
                        android:background="@drawable/round_edittext"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/register_EditText_paddingLeft"
                        android:textSize="15dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/register_textInput_to_textInput_size"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="닉네임"
                        android:textSize="@dimen/register_sideText_size"
                        android:textColor="@color/textColor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/register_layout_height_size">

                    <EditText
                        android:textColor="@color/textColor_special"
                        android:textColorHint="@color/textColor"
                        android:id="@+id/name"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/register_and_textInput_height"
                        android:layout_weight="7"
                        android:background="@drawable/round_edittext"
                        android:hint="한글, 영어, 숫자 (2~10)글자"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/register_EditText_paddingLeft"
                        android:singleLine="true"
                        android:textSize="@dimen/register_hint_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <Button
                        style="@style/bold_theme"
                        android:textColor="@color/textColor"
                        android:id="@+id/sendName"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/register_button_height_size"
                        android:layout_weight="3"
                        android:textSize="@dimen/register_button_text_size"
                        android:background="@drawable/all_btn"
                        android:text="중복확인" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/register_textInput_to_textInput_size"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이메일"
                        android:textSize="@dimen/register_sideText_size"
                        android:textColor="@color/textColor" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/register_layout_height_size">

                    <EditText
                        android:textColor="@color/textColor_special"
                        android:textColorHint="@color/textColor"
                        android:id="@+id/email"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/register_and_textInput_height"
                        android:layout_weight="14"
                        android:background="@drawable/round_edittext"
                        android:hint="인증 번호를 받을 이메일 주소"
                        android:inputType="textEmailAddress"
                        android:maxLength="30"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/register_EditText_paddingLeft"
                        android:textSize="@dimen/register_hint_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3" />

                    <Button
                        style="@style/bold_theme"
                        android:textColor="@color/textColor"
                        android:id="@+id/sendEmail"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/register_button_height_size"
                        android:layout_weight="4"
                        android:textSize="@dimen/register_button_text_size"
                        android:background="@drawable/all_btn"
                        android:text="보내기" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/register_textInput_to_textInput_size"
                    android:gravity="center_vertical" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/register_layout_height_size">

                    <TextView
                        android:id="@+id/countView"
                        style="@style/bold_theme"
                        android:layout_width="0dp"
                        android:textColor="@color/textColor_special"
                        android:layout_height="match_parent"
                        android:layout_weight="5"
                        android:gravity="center" />

                    <EditText
                        android:textColor="@color/textColor_special"
                        android:textColorHint="@color/textColor"
                        android:id="@+id/smsNumber"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/register_and_textInput_height"
                        android:layout_weight="5"
                        android:background="@drawable/round_edittext"
                        android:hint="인증번호"
                        android:inputType="number"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/register_EditText_paddingLeft"
                        android:textSize="@dimen/register_hint_size" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <Button
                        android:textColor="@color/textColor"
                        android:id="@+id/email_btn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/register_button_height_size"
                        android:layout_weight="3"
                        android:background="@drawable/all_btn"
                        android:textSize="@dimen/register_button_text_size"
                        style="@style/bold_theme"
                        android:text="확인" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/register_textInput_to_textInput_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/register_layout_height_size"
                    android:orientation="horizontal">


                    <Button
                        style="@style/bold_theme"
                        android:textColor="@color/textColor"
                        android:id="@+id/join_btn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/register_button_height_size"
                        android:layout_weight="1"
                        android:background="@drawable/all_btn"
                        android:text="회원가입"
                        android:textSize="@dimen/register_button_text_size" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:gravity="center"
                        android:text="" />

                    <Button
                        style="@style/bold_theme"
                        android:textColor="@color/textColor"
                        android:id="@+id/cancel_btn"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/register_button_height_size"
                        android:layout_weight="1"
                        android:background="@drawable/all_btn"
                        android:text="돌아가기"
                        android:textSize="@dimen/register_button_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="60" />

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>

    </LinearLayout>


</LinearLayout>