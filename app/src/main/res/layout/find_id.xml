<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_background">

    <TextView
        android:id="@+id/textView4"
        style="@style/title_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Find ID by email"
        android:textColor="@color/textColor"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:gravity="center"
        android:id="@+id/textView6"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="가입 시 입력하셨던 \n이메일로 아이디를 전송해 드립니다."
        android:textColor="@color/textColor"
        android:textSize="@dimen/find_explain_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:textColor="@color/textColor_special"
        android:id="@+id/editTextEmail"
        android:background="@drawable/round_edittext"
        android:paddingLeft="@dimen/find_EditText_paddingLeft"
        android:layout_width="@dimen/find_textInput_Button_width"
        android:layout_height="@dimen/find_textInput_Button_height"
        android:textSize="@dimen/find_text_size"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:maxLength="30"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:hint="이메일을 입력해주세요."
        android:textColorHint="@color/textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/sendForID"
        style="@style/bold_theme"
        android:layout_marginTop="36dp"
        android:layout_width="@dimen/find_textInput_Button_width"
        android:layout_height="@dimen/find_textInput_Button_height"
        android:background="@drawable/all_btn"
        android:textSize="@dimen/find_button_text_size"
        android:text="이메일로 전송하기"
        android:textColor="@color/textColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>