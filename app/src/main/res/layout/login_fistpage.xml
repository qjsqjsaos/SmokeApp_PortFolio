<?xml version="1.0" encoding="utf-8"?>

<LinearLayout style="@style/bold_theme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_background"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/textView3"
            style="@style/title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="로그인"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="339dp"
            android:layout_height="153dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:paddingTop="12.5dp"
            android:paddingBottom="12.5dp"
            android:src="@drawable/smokeimage" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:errorEnabled="true"
            app:hintTextAppearance="@style/TextLabel"
            app:hintTextColor="@color/Green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/idText"
                android:layout_width="@dimen/register_and_textInput"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/all_btn"
                android:hint="아이디를 입력해주세요"
                android:inputType="textEmailAddress"
                android:paddingLeft="25sp"
                android:textSize="18sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            app:hintTextAppearance="@style/TextLabel"
            app:errorEnabled="true"
            app:hintTextColor="@color/Green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/passwordText"
                android:background="@drawable/all_btn"
                android:layout_width="@dimen/register_and_textInput"
                android:layout_height="70dp"
                android:paddingLeft="25sp"
                android:layout_gravity="center_horizontal"
                android:hint="비밀번호를 입력해주세요."
                android:inputType="textWebPassword"
                android:textSize="18sp"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>


    <Button
            android:id="@+id/btn_login"
            android:layout_width="@dimen/register_and_textInput"
            android:layout_height="@dimen/register_and_textInput_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/all_btn"
            android:text="로그인"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="19dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="아이디찾기"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="비밀번호찾기"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rg_sign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="간편가입"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="19dp"
            android:orientation="horizontal">

            <com.shobhitpuri.custombuttons.GoogleSignInButton
                android:background="@drawable/all_btn"
                android:id="@+id/btn_google"
                android:layout_width="@dimen/Login_btn_width"
                android:layout_height="@dimen/Login_btn_height"
                android:fontFamily="@font/robotmedium"
                android:layout_centerInParent="true"
                android:text="@string/google_sign_up"
                app:isDarkTheme="false" />


        </LinearLayout>


    </LinearLayout>