<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/baseColor">

        <TextView

            style="@style/title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="일기 쓰기"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="8"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <EditText
                android:fontFamily="@font/mapo"
                android:singleLine="true"
                android:id="@+id/title_diary"
                android:background="@drawable/round_edittext"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:maxLines="1"
                android:maxLength="30"
                android:padding="20dp"
                android:textSize="16sp"
                android:hint="제목"
                android:layout_height="70dp"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ScrollView
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="350dp"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <EditText
                        android:textSize="16sp"
                        android:fontFamily="@font/mapo"
                        android:id="@+id/mainText"
                        android:background="@drawable/round_edittext"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:maxLength="500"
                        android:padding="20dp"
                        android:hint="1000자 이하로 가능합니다!"
                        android:layout_height="350dp"
                        android:gravity="top" />

                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/inputImage"
                android:elevation="20dp"
                android:textColor="@color/textColor_special"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/bold_theme"
                android:background="@drawable/all_btn"
                android:text="이미지 첨부"
                android:layout_weight="3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:gravity="center"
                android:id="@+id/liveTextLength"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center_vertical"
                android:textSize="16sp"
                android:text="/1000"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/defaultImageW"
                android:elevation="20dp"
                android:textColor="@color/textColor_special"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/bold_theme"
                android:background="@drawable/all_btn"
                android:text="이미지 없음"
                android:layout_weight="3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/dateWW"
                android:gravity="center"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_gravity="center_vertical"
                android:textSize="15sp"
              />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>




        <TextView
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="첨부된 이미지"/>

        <ImageView
            android:src="@drawable/no_image"
            android:id="@+id/insertImg"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"
            />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/cancel_btn_diary"
                style="@style/bold_theme"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="@dimen/find_textInput_Button_height"
                android:layout_gravity="center"
                android:background="@drawable/all_btn"
                android:text="취소"
                android:textColor="@color/textColor"
                android:textSize="@dimen/find_button_text_size" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/saveDiary"
                style="@style/bold_theme"
                android:layout_width="0dp"
                android:layout_height="@dimen/find_textInput_Button_height"
                android:layout_weight="6"
                android:layout_gravity="center"
                android:background="@drawable/all_btn"
                android:text="작성 완료"
                android:textColor="@color/textColor"
                android:textSize="@dimen/find_button_text_size" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            />

    </LinearLayout>
</ScrollView>
