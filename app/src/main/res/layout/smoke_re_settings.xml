<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout style="@style/bold_theme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/start_background"
        android:orientation="vertical"
        >

        <TextView
            style="@style/title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="흡연 재설정"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/ad_view_container5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="136dp"
            android:layout_height="153dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:paddingTop="12.5dp"
            android:paddingBottom="12.5dp"
            android:src="@drawable/smokeimage" />



        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="하루 평균 흡연량" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColorHint="@color/textColor"
            app:errorEnabled="true"
            app:hintTextAppearance="@style/TextLabel">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cigaCount"
                android:maxLength="2"
                android:paddingTop="@dimen/floating_hint_margin"
                android:background="@drawable/edit_text_login"
                android:layout_width="@dimen/login_textInput"
                android:layout_height="@dimen/Login_and_textInput_height"
                android:layout_gravity="center_horizontal"
                android:maxLines="1"
                android:hint="하루 평균 흡연량을 입력해주세요."
                android:inputType="number"
                android:paddingLeft="@dimen/login_EditText_paddingLeft"
                android:textColor="@color/textColor_special"
                android:textSize="@dimen/Login_text_size"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:text="하루 평균 흡연비용" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/TextInputLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColorHint="@color/textColor"
            app:hintTextAppearance="@style/TextLabel"
            app:errorEnabled="true"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/cigaCost"
                android:maxLength="5"
                android:paddingTop="@dimen/floating_hint_margin"
                android:background="@drawable/edit_text_login"
                android:layout_width="@dimen/login_textInput"
                android:layout_height="@dimen/Login_and_textInput_height"
                android:maxLines="1"
                android:paddingLeft="@dimen/login_EditText_paddingLeft"
                android:layout_gravity="center_horizontal"
                android:hint="하루 평균 흡연비용을 입력해주세요."
                android:inputType="number"
                android:textSize="@dimen/Login_text_size"

                android:textColor="@color/textColor_special"
                android:textStyle="bold" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/resettingSmoke"
            android:layout_width="@dimen/login_Button_width"
            android:layout_height="@dimen/login_Button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/all_btn"
            android:text="흡연 재설정하기"
            android:textColor="@color/textColor"
            android:textSize="@dimen/Login_text_size"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancelsettings_btn"
            android:layout_width="@dimen/login_Button_width"
            android:layout_height="@dimen/login_Button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/all_btn"
            android:text="취소하기"
            android:textColor="@color/textColor"
            android:textSize="@dimen/Login_text_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="50dp"/>

    </LinearLayout>
</ScrollView>