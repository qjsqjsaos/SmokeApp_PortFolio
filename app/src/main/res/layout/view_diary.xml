<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/baseColor">

        <TextView

            style="@style/title_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="나의 금연일기"
            android:textColor="@color/textColor"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="8"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <TextView
                style="@style/bold_theme"
                android:fontFamily="@font/mapo"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:hint="제목 : "
                android:layout_height="70dp"
                />

            <TextView
                style="@style/bold_theme"
                android:id="@+id/viewTitle"
                android:fontFamily="@font/mapo"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:maxLines="1"
                android:gravity="center_vertical"
                android:maxLength="30"
                android:textSize="16sp"
                android:layout_height="70dp"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewLayout"
            android:layout_width="match_parent"
            android:gravity="center"
            android:visibility="visible"
            android:orientation="horizontal"
            android:weightSum="8"
            android:layout_height="300dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/viewImage"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:src="@drawable/no_image" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>



                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:fontFamily="@font/mapo"
                        android:id="@+id/viewMainText"
                        android:layout_width="0dp"
                        android:layout_weight="6"
                        android:maxLength="1000"
                        android:textSize="16sp"
                        android:hint="1000자 이하로 가능합니다!"
                        android:gravity="top"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"/>

            <TextView
                android:id="@+id/viewDate"
                android:fontFamily="@font/mapo"
                android:textColor="@color/textColor_special"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                style="@style/bold_theme"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:background="@color/baseColor"
                android:text="작성 날짜 : "
                android:layout_weight="10" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"/>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/ViewBack_Btn"
                style="@style/bold_theme"
                android:layout_width="0dp"
                android:layout_weight="6"
                android:layout_height="@dimen/find_textInput_Button_height"
                android:layout_gravity="center"
                android:background="@drawable/all_btn"
                android:text="돌아가기"
                android:textColor="@color/textColor"
                android:textSize="@dimen/find_button_text_size" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>


            <Button
                android:id="@+id/viewRevise_btn"
                style="@style/bold_theme"
                android:layout_width="0dp"
                android:layout_height="@dimen/find_textInput_Button_height"
                android:layout_weight="6"
                android:layout_gravity="center"
                android:background="@drawable/all_btn"
                android:text="수정하기"
                android:textColor="@color/textColor"
                android:textSize="@dimen/find_button_text_size" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            />

    </LinearLayout>
</ScrollView>