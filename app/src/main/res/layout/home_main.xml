<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/home_and_another_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="30dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/home_and_another_background"
            android:gravity="center|center_vertical"
            android:orientation="horizontal"
            android:weightSum="10"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:elevation="10dp"
                android:id="@+id/card"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="75dp"
                android:background="@drawable/all_btn"
                android:clickable="false"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:padding="5dp">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/user" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:weightSum="2">


                    <TextView
                        android:textColor="@color/textColor"
                        android:id="@+id/nickName"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="이름"
                        android:textSize="17sp" />



                    <TextView
                        android:textColor="@color/textColor"
                        android:id="@+id/noSmoke_date"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="금연시작날짜"
                        android:textSize="20sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="5dp"
                    android:weightSum="2">

                    <ImageView
                        android:id="@+id/rank"
                        android:layout_gravity="center"
                        android:layout_width="50dp"
                        android:layout_height="50dp"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

        <TextView
            android:id="@+id/text_wisesay"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:padding="13dp"
            android:layout_height="220dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/wisesay_settings"
            android:elevation="10dp"
            android:fontFamily="@font/mapo"
            android:gravity="center"
            android:lineSpacingMultiplier="1.2"
            android:textColor="@color/textColor_special"
            android:textSize="17sp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

        </LinearLayout>




            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/SetupFrg_ViewPage_Info"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="center"
                android:text="수열이가 곧 수열이다 -수열-"
                android:textColor="@color/textColor_special"
                android:textSize="17sp"
                 />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="20dp" />


        <Button
            android:id="@+id/button2"
            style="@style/bold_theme"
            android:layout_gravity="center"
            android:layout_width="@dimen/find_textInput_Button_width"
            android:layout_height="@dimen/find_textInput_Button_height"
            android:background="@drawable/all_btn"
            android:textSize="@dimen/find_button_text_size"
            android:text="마음의 준비가 되었으면 눌러주세요."
            android:textColor="@color/textColor_special"
            />

            <Button
                android:id="@+id/ns_stop"
                style="@style/bold_theme"
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_width="@dimen/find_textInput_Button_width"
                android:layout_height="@dimen/find_textInput_Button_height"
                android:background="@drawable/all_btn"
                android:textSize="@dimen/find_button_text_size"
                android:text="다시 시작할래요. ㅠㅠ"
                android:textColor="@color/textColor_special"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp" />



    </LinearLayout>

</ScrollView>
